print('\n')
n=input('Please enter name of meeting organiser : ')
x=input('Number of meeting participants : ')
print(' \nYou are each numbered from 1 to '+str(x)+' starting on '+str(n)+'\'s left.\n')
int_x=int(x)

r=range(1,int_x+1)
L=list(r)
import random

a=random.choice(L)
L.remove(a)
b=random.choice(L)
L.remove(b)
c=random.choice(L)

import colorama
from colorama import Fore, Style

print(Fore.RED+str(a)+' is Time Keeper'+Style.RESET_ALL+' - Keep it moving')
print(Fore.RED+str(b)+' is Decision Pusher'+Style.RESET_ALL+' - Stay on topic')
print(Fore.RED+str(c)+' is Observer'+Style.RESET_ALL+' - Create a Minutes entry in OneNote\n')

exit=input('Hit \'enter\' to exit')
